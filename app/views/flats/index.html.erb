<div class="container-fluid">
  <div class="container">
    <div class="row">
      <% @flats.each do |flat| %>
        <div class="col-3">
          <div class="card-trip">
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg">
            <div class="card-trip-infos">
              <div>
                <h2><%= flat.name %></h2>
                <p><%= flat.address %></p>
              </div>
              <h6 class="card-trip-pricing">$<%= flat.price_per_night %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
